@page
@model IndexModel
@{
    ViewData["Title"] = "Mail Order - Home page";
}

<div class="row">
    <form>
        <input asp-formaction="filter" type="text" placeholder="Search" />
        <input type="submit" />
    </form>
</div>

<div class="row">
   @foreach (var item in Model.ItemModel)
    {
        <div class="col-3 pb-4">
            <div class="card">
                <div class="card-body">
                   <div class="row">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-8 h5">
                                        @Html.DisplayFor(modelItem => @item.Name)
                                    </div>
                                    <div class="col-4 text-end">
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </div>
                                </div>
                            </div>

                            <div class="card-body">
                                <img src="~/images/PlaceHolder.png" class="card-img" />
                            </div>

                            <div class="card-body">
                                @Html.DisplayFor(modelItem => @item.Description)
                            </div>

                            <div class="card-body">
                                <a asp-page="Details" asp-route-id="@item.Id"
                                   class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                   </div>
                   </div>
                </div>
            </div>
    }

</div>