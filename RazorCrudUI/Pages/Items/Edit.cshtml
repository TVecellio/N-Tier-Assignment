@page
@model RazorCrudUI.Pages.Items.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ItemModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemModel.Id" />
            <div class="form-group">
                <label asp-for="ItemModel.Name" class="control-label"></label>
                <input asp-for="ItemModel.Name" class="form-control" />
                <span asp-validation-for="ItemModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemModel.Description" class="control-label"></label>
                <input asp-for="ItemModel.Description" class="form-control" />
                <span asp-validation-for="ItemModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemModel.Price" class="control-label"></label>
                <input asp-for="ItemModel.Price" class="form-control" />
                <span asp-validation-for="ItemModel.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ItemModel.PictureURL" class="control-label"></label>
                <input type="file" asp-for="ItemModel.PictureURL" class="form-control" />
                <span asp-validation-for="ItemModel.PictureURL" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
        @if (string.IsNullOrEmpty(Model.ItemModel.PictureURL))
        {
            <img src = "~/images/PlaceHolder.png" class="card-img" />

        }
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
