@page
@model RazorCrudUI.Pages.Items.IndexModel

@{
    ViewData["Title"] = "Main_Page";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary btn-sm"><i class="bi bi-cart-plus"></i></a>
</p>

<form>
    <p>
        Name of Item: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemModel[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemModel[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
 
        @if (Model.ItemModel != null)
        {
            foreach (var item in Model.ItemModel)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary text-body"><i class="bi bi-pencil"></i></a> 
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary text-body"><i class="bi bi-info-circle"></i></a> 
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger text-body"><i class="bi bi-x-circle-fill"></i></a>
                    </td>
                </tr>
            }
        }


    </tbody>
</table>
